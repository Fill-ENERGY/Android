<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_community_block_lo"
        android:layout_width="266dp"
        android:layout_height="260dp"
        android:background="@drawable/dialog_basic"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_community_block_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자를 차단하시겠습니까?"
            android:textColor="@color/gray_scale8"
            style="@style/Title2"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_community_block_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신고가 접수되었습니다. 신고한 사용자의 게시글이\n앞으로도 표시되지 않도록 차단하시겠습니까?\n차단하면 해당 사용자의 모든 게시글과 댓글이\n보이지 않게 됩니다."
            android:textColor="@color/gray_scale6"
            style="@style/Body4"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_community_block_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dialog_community_block_yes"
            android:layout_width="226dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/select_help_status"
            android:text="예"
            android:textColor="@color/white"
            style="@style/Title2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_community_block_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/dialog_community_block_no"
            android:layout_width="226dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/white"
            android:text="아니오"
            android:textColor="@color/gray_scale6"
            style="@style/Title2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_community_block_yes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>