<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.note.NoteFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/some_id"
        android:layout_marginRight="132dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textSize="19sp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="쪽지"
        android:gravity="center" />

    <TextView
        android:id="@+id/edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/some_id"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="44dp"
        android:textSize="19sp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="편집"
        android:gravity="center" />


    <View
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:background="#E4E4E2" />




    <ImageView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat"
        android:layout_marginTop="252dp"
        android:layout_centerHorizontal="true" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:text="채팅이 없어요"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginTop="405dp"
        android:gravity="center_horizontal|top"
        />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray_scale7"
        android:text="힘전소 사용자들과 대화를 나눠 보세요."
        android:layout_marginTop="432dp"
        android:gravity="center_horizontal|top"
        />

</RelativeLayout>
