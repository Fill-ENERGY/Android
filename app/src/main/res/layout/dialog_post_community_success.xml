<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_carpool_matching_lo"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:background="@drawable/dialog_basic"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_post_success_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정상적으로 등록되었습니다."
            android:textColor="@color/gray_scale8"
            style="@style/Title2"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dialog_post_success_btn"/>

        <ImageView
            android:id="@+id/dialog_post_success_btn"
            android:layout_width="226dp"
            android:layout_height="50dp"
            android:src="@drawable/button_confirm"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="27dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_post_success_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>