<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/community_help_status_lo"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/bottomsheet_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dialog_help_request"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:background="@drawable/select_help_status"
            android:text="요청 중"
            android:textColor="@color/white"
            style="@style/Title2"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/dialog_help_contacting"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:background="@drawable/unselect_help_status"
            android:text="연락 중"
            android:textColor="@color/gray_scale6"
            style="@style/Title2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_help_request"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/dialog_help_resolved"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:gravity="center"
            android:background="@drawable/unselect_help_status"
            android:text="해결 완료"
            android:textColor="@color/gray_scale6"
            style="@style/Title2"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_help_contacting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>