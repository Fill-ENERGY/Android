<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    android:background="@drawable/background_spinner_option">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_close"
        android:layout_gravity="right"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_logo"
        android:scaleType="center"
        android:background="@color/white"
        />

    <TextView
        style="@style/Title1"
        android:id="@+id/tv_login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textColor="@color/gray_scale8"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        style="@style/Body4"
        android:id="@+id/tv_login_Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_sub"
        android:textColor="@color/gray_scale6"
        android:gravity="center" />

    <ImageView
        android:id="@+id/btn_kakao_login"
        android:src="@drawable/kakao_login_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="26dp" />

    <TextView
        style="@style/Body4"
        android:id="@+id/tv_login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_input"
        android:textColor="@color/gray_scale6"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

</LinearLayout>
