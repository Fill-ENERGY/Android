<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/notification_no_data_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/notification_image"
        android:layout_marginTop="174dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/notification_no_data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림이 없어요."
        android:textColor="@color/gray_scale8"
        style="@style/Title1"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/notification_no_data_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/notification_no_data_subtitle"/>

    <TextView
        android:id="@+id/notification_no_data_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티 관련한 새로운 소식을 알려드려요."
        android:textColor="@color/gray_scale7"
        style="@style/Body2"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/notification_no_data_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>