<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.list.ListAddReviewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/divider1"/>

        <TextView
            android:id="@+id/tv_add_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평가하기"
            style="@style/Title1"
            android:textColor="@color/gray_scale8"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록"
            style="@style/Title2"
            android:textColor="@color/gray_scale5"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_scale3"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_add_review_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_station_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="서대문구청 전동보장구 급속충전기"
            android:textColor="@color/gray_scale8"
            style="@style/Title2"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider1" />

        <View
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_scale3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_station_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_add_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 충전소의 별점을 등록해 주세요."
            android:textColorHint="@color/gray_scale8"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:singleLine="true"
            style="@style/Title2"
            android:textColor="@color/gray_scale8"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(필수)"
            style="@style/Body4"
            android:textColor="@color/red"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/tv_add_score_title"
            app:layout_constraintTop_toTopOf="@id/tv_add_score_title" />

        <ImageView
            android:id="@+id/iv_score"
            android:src="@drawable/iv_unfill_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_add_score_title"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/iv_score2"
            android:src="@drawable/iv_unfill_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_score"
            app:layout_constraintStart_toEndOf="@id/iv_score"
            />
        <ImageView
            android:id="@+id/iv_score3"
            android:src="@drawable/iv_unfill_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_score"
            app:layout_constraintStart_toEndOf="@id/iv_score2"
            />
        <ImageView
            android:id="@+id/iv_score4"
            android:src="@drawable/iv_unfill_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_score"
            app:layout_constraintStart_toEndOf="@id/iv_score3"
            />
        <ImageView
            android:id="@+id/iv_score5"
            android:src="@drawable/iv_unfill_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@id/iv_score"
            app:layout_constraintStart_toEndOf="@id/iv_score4"
            />
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(0/5)"
            style="@style/Body4"
            android:textColor="@color/gray_scale7"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5.23dp"
            app:layout_constraintStart_toEndOf="@id/iv_score5"
            app:layout_constraintTop_toTopOf="@id/iv_score" />

        <View
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_scale3"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/iv_score"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_add_keyword_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 충전소의 키워드를 골라 주세요."
            android:textColorHint="@color/gray_scale8"
            android:background="@android:color/transparent"
            android:inputType="none"
            android:singleLine="true"
            style="@style/Title2"
            android:textColor="@color/gray_scale8"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider3"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_require"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(필수)"
            style="@style/Body4"
            android:textColor="@color/red"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="@id/tv_add_keyword_title"
            app:layout_constraintTop_toBottomOf="@id/tv_add_keyword_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(중복 선택 가능)"
            style="@style/Body4"
            android:textColor="@color/gray_scale7"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/tv_require"
            app:layout_constraintTop_toTopOf="@id/tv_require" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keyword_charging_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            android:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_require"
            app:layout_constraintStart_toStartOf="@id/tv_require"
            android:layout_marginTop="22dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“ 충전 시간이 빨라요 “"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keyword_accessibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/cv_keyword_charging_speed"
            app:layout_constraintStart_toEndOf="@id/cv_keyword_charging_speed">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“ 충전소 접근이 편리해요 “"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keyword_waiting_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv_keyword_charging_speed"
            app:layout_constraintStart_toStartOf="@id/tv_require"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“ 대기 장소가 편안해요 “"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keyword_charger_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/cv_keyword_waiting_area"
            app:layout_constraintStart_toEndOf="@id/cv_keyword_waiting_area">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“ 충전기 관리가 잘 되었어요 “"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keyword_facility_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv_keyword_waiting_area"
            app:layout_constraintStart_toStartOf="@id/tv_require"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“ 시설의 도움을 받았어요 “"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_keyword_revisit_intention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/cv_keyword_facility_support"
            app:layout_constraintStart_toEndOf="@id/cv_keyword_facility_support">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“ 재방문 의사가 있어요 “"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_no_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray_scale2"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/cv_keyword_facility_support"
            app:layout_constraintStart_toStartOf="@id/tv_require"
            android:layout_marginTop="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택할 키워드가 없어요"
                style="@style/Body4"
                android:textColor="@color/gray_scale7"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="14dp"
                />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_image_select"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/button_photo"
            android:layout_marginTop="11dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider4"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_selected_images"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_writing_community_image"
            app:layout_constraintStart_toEndOf="@id/iv_image_select"
            app:layout_constraintTop_toBottomOf="@id/divider4" />

        <View
            android:id="@+id/divider4"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_scale3"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cv_no_keyword"
            app:layout_constraintStart_toStartOf="parent"/>
        <View
            android:id="@+id/divider5"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray_scale3"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image_select"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="평가하기는 더 나은 충전 환경을 만들기 위한 서비스입니다. \n무분별한 비방이 아닌 진심을 담은 평가를 해 주세요.\n(최소 10자 이상)"
            android:textColorHint="@color/gray_scale6"
            android:background="@android:color/transparent"
            android:textColor="@color/gray_scale8"
            style="@style/Body2"
            android:inputType="none"
            android:imeOptions="actionDone"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>