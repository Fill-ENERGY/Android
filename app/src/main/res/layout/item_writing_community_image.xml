<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_writing_community_image_cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/item_writing_community_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/community_image_upload"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/writing_community_image_cancel"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/community_cancel_upload_image"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/item_writing_community_image_cardView"
        app:layout_constraintEnd_toEndOf="@id/item_writing_community_image_cardView"/>


</androidx.constraintlayout.widget.ConstraintLayout>